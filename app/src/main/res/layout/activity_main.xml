<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.avvos.weatherex.MainActivity">


    <TableLayout
        android:layout_width="378dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout1"
        tools:layout_editor_absoluteX="2dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <SearchView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="17dp"
                tools:layout_editor_absoluteY="36dp">

            </SearchView>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="379dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="104dp">

        <TableRow
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/clock" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/thermometer2" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/winddirection" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/windspeed" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/yagis" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/airpressure" />
        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/hamzasListView"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="134dp"
        app:layout_constraintTop_toTopOf="@+id/viewPager1"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager1"
        android:layout_width="389dp"
        android:layout_height="660dp"
        android:layout_below="@+id/tabLayout1"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="39dp">

    </android.support.v4.view.ViewPager>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout1"
        android:layout_width="380dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:tabGravity="fill"
        app:tabMode="fixed"
        tools:layout_editor_absoluteX="2dp">

    </android.support.design.widget.TabLayout>

</android.support.constraint.ConstraintLayout>
